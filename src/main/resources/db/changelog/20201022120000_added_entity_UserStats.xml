<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="20201022120000-1" author="stdmk">
        <createTable tableName="chat" schemaName="bot">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="userid" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="chatid" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="numberofmessages" type="int">
                <constraints nullable="true" />
            </column>
            <column name="numberofallmessages" type="int">
                <constraints nullable="true" />
            </column>
            <column name="lastMessage" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
